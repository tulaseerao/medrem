= form_for @dependent do |f|
  - if @dependent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dependent.errors.count, "error")} prohibited this dependent from being saved:"
      %ul
        - @dependent.errors.full_messages.each do |msg|
          %li= msg

  .row
    .large-3.columns
      = f.label :first_name
      = f.text_field :first_name
    .large-3.columns
      = f.label :last_name
      = f.text_field :last_name
    .large-3.columns
      = f.label :date_of_birth
      = f.text_field :date_of_birth, class: 'datepicker'
    = f.hidden_field :user_id, value: current_user.id
  .row
    .large-2.columns
      = f.submit 'Save', class: 'button tiny'
