= form_for @medname do |f|
  - if @medname.errors.any?
    #error_explanation
      %h2= "#{pluralize(@medname.errors.count, "error")} prohibited this medname from being saved:"
      %ul
        - @medname.errors.full_messages.each do |msg|
          %li= msg

  .large-3.column
    = f.label :name
    = f.text_field :name
  .large-3.column
    = f.label :strength
    = f.text_field :strength
  .large-3.column
    = f.label :form
    = f.text_field :form
  .large-3.column
    = f.label :purpose
    = f.text_field :purpose
  .row
    .large-2.columns
      = f.submit 'Save', class: 'button tiny'
